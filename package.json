{
  "name": "typing-monitor",
  "version": "0.1.0",
  "description": "Keyboard typing detection made easy",
  "main": "lib/index.js",
  "jsnext:main": "dist/typing-monitor.es.js",
  "module": "dist/typing-monitor.es.js",
  "scripts": {
    "build": "yarn run build:dist && yarn run build:lib",
    "build:dist": "rollup -c && rollup -c --environment ESBUNDLE && rollup -c --environment PRODUCTION",
    "prebuild:dist": "rimraf dist/*",
    "build:lib": "babel src/ -d lib/",
    "prebuild:lib": "rimraf lib/*",
    "build:watch": "npm run build:lib -- --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "flow": "flow check",
    "lint": "eslint src test build",
    "prepare": "yarn run lint && yarn run flow && yarn run test",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wsmd/typing-monitor.git"
  },
  "keywords": [
    "keyboard",
    "input",
    "javascript",
    "events"
  ],
  "author": "Waseem Dahman <dwaseem@icloud.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wsmd/typing-monitor/issues"
  },
  "homepage": "https://github.com/wsmd/typing-monitor#readme",
  "devDependencies": {
    "@types/jest": "21.1.1",
    "babel-cli": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "21.2.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "coveralls": "3.0.0",
    "eslint": "4.11.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-airbnb-flow": "1.0.2",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "21.3.2",
    "flow-bin": "0.59.0",
    "jest": "21.2.1",
    "regenerator-runtime": "0.11.0",
    "rimraf": "2.6.2",
    "rollup": "0.51.8",
    "rollup-plugin-babel": "3.0.2",
    "rollup-plugin-uglify": "2.0.1"
  },
  "jest": {
    "testRegex": "(/test/.*\\.test.js)$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/helpers/"
    ]
  }
}
